---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About Us' },
  { href: '/contact', label: 'Contact' },
];

const serviceLinks = [
  { href: '/services', label: 'All Services' },
  { href: '/car-servicing', label: 'Car Servicing' },
  { href: '/air-conditioning', label: 'Air Conditioning' },
  { href: '/diagnostics', label: 'Engine Diagnostics' },
  { href: '/brake-repair', label: 'Brake Repair' },
  { href: '/clutch-replacement', label: 'Clutch Replacement' },
  { href: '/cambelt-replacement', label: 'Cambelt Replacement' },
];

const whatsappMessage = "Hi, I'd like to enquire about your car services";
const whatsappUrl = `https://wa.me/447394433889?text=${encodeURIComponent(whatsappMessage)}`;
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-slate-800 bg-slate-900/95 text-white shadow-lg backdrop-blur-sm">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Mobile: Logo on left, Menu button on right -->
    <div class="flex items-center justify-between py-4 md:hidden">
      <a href="/" class="flex items-center" aria-label="A1 Service Expert home">
        <img src="/images/logo.webp" alt="A1 Service Expert" class="h-16 w-auto" />
      </a>
      <button
        id="mobile-menu-button"
        class="inline-flex items-center justify-center rounded-md p-2 text-slate-200 hover:bg-slate-800 hover:text-brand-orange"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Desktop: Logo centered on top -->
    <div class="hidden md:flex w-full items-center justify-center py-6">
      <a href="/" aria-label="A1 Service Expert home">
        <img src="/images/logo.webp" alt="A1 Service Expert" class="h-32 w-auto lg:h-40" />
      </a>
    </div>

    <!-- Desktop: Navigation and CTA buttons below logo -->
    <div class="hidden md:flex items-center justify-between pb-4">
      <!-- Desktop Navigation with Services Dropdown -->
      <nav class="flex items-center gap-8" aria-label="Main navigation">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-sm font-semibold transition hover:text-brand-orange',
              currentPath === link.href ? 'text-brand-orange' : 'text-slate-200'
            ]}
          >
            {link.label}
          </a>
        ))}
        <!-- Services Dropdown -->
        <div class="services-dropdown relative">
          <button
            class:list={[
              'flex items-center gap-1 text-sm font-semibold transition hover:text-brand-orange',
              currentPath.startsWith('/services') || currentPath.includes('/car-servicing') || currentPath.includes('/air-conditioning') || currentPath.includes('/diagnostics') || currentPath.includes('/brake') || currentPath.includes('/clutch') || currentPath.includes('/cambelt') ? 'text-brand-orange' : 'text-slate-200'
            ]}
            aria-label="Services menu"
            aria-expanded="false"
          >
            Services
            <svg class="h-4 w-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="services-menu absolute left-0 top-full mt-2 hidden w-56 rounded-lg border border-slate-700 bg-slate-900 shadow-lg">
            {serviceLinks.map((link) => (
              <a
                href={link.href}
                class:list={[
                  'block px-4 py-2.5 text-sm transition hover:bg-slate-800 hover:text-brand-orange first:rounded-t-lg last:rounded-b-lg',
                  currentPath === link.href ? 'bg-slate-800 text-brand-orange font-semibold' : 'text-slate-200'
                ]}
              >
                {link.label}
              </a>
            ))}
          </div>
        </div>
      </nav>

      <!-- Desktop CTA Buttons -->
      <div class="flex items-center gap-3">
        <a
          href="tel:07394433889"
          class="inline-flex items-center gap-2 rounded-full bg-brand-orange px-5 py-2.5 text-sm font-semibold text-white transition hover:-translate-y-0.5 hover:bg-orange-500"
          aria-label="Call 07394 433889"
        >
          <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
          </svg>
          Call Us
        </a>
        <a
          href={whatsappUrl}
          target="_blank"
          rel="noreferrer"
          class="inline-flex items-center gap-2 rounded-full border border-brand-orange px-5 py-2.5 text-sm font-semibold text-brand-orange transition hover:-translate-y-0.5 hover:bg-brand-orange hover:text-white"
          aria-label="Chat on WhatsApp"
        >
          <svg viewBox="0 0 24 24" class="h-4 w-4" fill="currentColor">
            <path d="M20.52 3.48A11.94 11.94 0 0 0 12.06 0C5.47 0 .1 5.37.1 12c0 2.12.56 4.14 1.62 5.94L0 24l6.2-1.6A11.86 11.86 0 0 0 12.06 24c6.58 0 11.94-5.37 11.94-12 0-3.2-1.25-6.2-3.48-8.52Zm-8.46 18.5c-1.86 0-3.63-.5-5.2-1.47l-.37-.22-3.68.95.98-3.58-.24-.37A9.65 9.65 0 0 1 2.3 12c0-5.38 4.38-9.76 9.76-9.76 2.6 0 5.06 1 6.9 2.83a9.66 9.66 0 0 1 2.86 6.93c0 5.38-4.38 9.76-9.76 9.76Zm5.63-7.3c-.3-.15-1.78-.88-2.06-.98-.28-.1-.49-.15-.7.15-.2.3-.8.98-.98 1.18-.2.2-.36.23-.66.08-.3-.15-1.25-.46-2.38-1.46-.88-.78-1.48-1.74-1.66-2.04-.18-.3 0-.47.14-.62.14-.14.3-.36.46-.54.15-.18.2-.3.3-.5.1-.2.05-.38-.03-.54-.08-.15-.7-1.68-.96-2.3-.25-.6-.5-.5-.7-.51h-.6c-.2 0-.54.07-.82.38-.28.3-1.08 1.06-1.08 2.58 0 1.5 1.1 2.94 1.26 3.14.15.2 2.12 3.24 5.14 4.54.72.3 1.28.48 1.72.62.72.23 1.38.2 1.9.12.58-.08 1.78-.72 2.03-1.4.26-.7.26-1.3.2-1.4-.08-.12-.28-.2-.58-.35Z"/>
          </svg>
          WhatsApp
        </a>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden border-t border-slate-800 bg-slate-900 md:hidden">
    <nav class="space-y-1 px-4 pb-4 pt-2" aria-label="Mobile navigation">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block rounded-lg px-3 py-2 text-base font-semibold transition hover:bg-slate-800 hover:text-brand-orange',
            currentPath === link.href ? 'bg-slate-800 text-brand-orange' : 'text-slate-200'
          ]}
        >
          {link.label}
        </a>
      ))}

      <!-- Mobile Services Accordion -->
      <div class="mobile-services-accordion">
        <button
          id="mobile-services-button"
          class:list={[
            'flex w-full items-center justify-between rounded-lg px-3 py-2 text-base font-semibold transition hover:bg-slate-800 hover:text-brand-orange',
            currentPath.startsWith('/services') || currentPath.includes('/car-servicing') || currentPath.includes('/air-conditioning') || currentPath.includes('/diagnostics') || currentPath.includes('/brake') || currentPath.includes('/clutch') || currentPath.includes('/cambelt') ? 'bg-slate-800 text-brand-orange' : 'text-slate-200'
          ]}
          aria-label="Services menu"
          aria-expanded="false"
        >
          Services
          <svg class="h-4 w-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div id="mobile-services-menu" class="hidden pl-3 pt-1 space-y-1">
          {serviceLinks.map((link) => (
            <a
              href={link.href}
              class:list={[
                'block rounded-lg px-3 py-2 text-sm transition hover:bg-slate-800 hover:text-brand-orange',
                currentPath === link.href ? 'bg-slate-800 text-brand-orange font-semibold' : 'text-slate-300'
              ]}
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>

      <div class="flex flex-col gap-3 pt-4">
        <a
          href="tel:07394433889"
          class="inline-flex items-center justify-center gap-2 rounded-full bg-brand-orange px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-orange-500"
        >
          <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
          </svg>
          Call 07394 433889
        </a>
        <a
          href={whatsappUrl}
          target="_blank"
          rel="noreferrer"
          class="inline-flex items-center justify-center gap-2 rounded-full border border-brand-orange px-5 py-2.5 text-sm font-semibold text-brand-orange transition hover:bg-brand-orange hover:text-white"
        >
          <svg viewBox="0 0 24 24" class="h-4 w-4" fill="currentColor">
            <path d="M20.52 3.48A11.94 11.94 0 0 0 12.06 0C5.47 0 .1 5.37.1 12c0 2.12.56 4.14 1.62 5.94L0 24l6.2-1.6A11.86 11.86 0 0 0 12.06 24c6.58 0 11.94-5.37 11.94-12 0-3.2-1.25-6.2-3.48-8.52Zm-8.46 18.5c-1.86 0-3.63-.5-5.2-1.47l-.37-.22-3.68.95.98-3.58-.24-.37A9.65 9.65 0 0 1 2.3 12c0-5.38 4.38-9.76 9.76-9.76 2.6 0 5.06 1 6.9 2.83a9.66 9.66 0 0 1 2.86 6.93c0 5.38-4.38 9.76-9.76 9.76Zm5.63-7.3c-.3-.15-1.78-.88-2.06-.98-.28-.1-.49-.15-.7.15-.2.3-.8.98-.98 1.18-.2.2-.36.23-.66.08-.3-.15-1.25-.46-2.38-1.46-.88-.78-1.48-1.74-1.66-2.04-.18-.3 0-.47.14-.62.14-.14.3-.36.46-.54.15-.18.2-.3.3-.5.1-.2.05-.38-.03-.54-.08-.15-.7-1.68-.96-2.3-.25-.6-.5-.5-.7-.51h-.6c-.2 0-.54.07-.82.38-.28.3-1.08 1.06-1.08 2.58 0 1.5 1.1 2.94 1.26 3.14.15.2 2.12 3.24 5.14 4.54.72.3 1.28.48 1.72.62.72.23 1.38.2 1.9.12.58-.08 1.78-.72 2.03-1.4.26-.7.26-1.3.2-1.4-.08-.12-.28-.2-.58-.35Z"/>
          </svg>
          WhatsApp Us
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
    mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
  });

  // Mobile services accordion
  const mobileServicesButton = document.getElementById('mobile-services-button');
  const mobileServicesMenu = document.getElementById('mobile-services-menu');

  mobileServicesButton?.addEventListener('click', () => {
    const isExpanded = mobileServicesButton.getAttribute('aria-expanded') === 'true';
    mobileServicesButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileServicesMenu?.classList.toggle('hidden');

    // Rotate arrow icon
    const arrow = mobileServicesButton.querySelector('svg');
    arrow?.classList.toggle('rotate-180');
  });

  // Desktop services dropdown
  const servicesDropdown = document.querySelector('.services-dropdown');
  const servicesButton = servicesDropdown?.querySelector('button');
  const servicesMenu = servicesDropdown?.querySelector('.services-menu');

  let dropdownTimeout: ReturnType<typeof setTimeout> | null = null;

  servicesDropdown?.addEventListener('mouseenter', () => {
    if (dropdownTimeout) {
      clearTimeout(dropdownTimeout);
      dropdownTimeout = null;
    }
    servicesButton?.setAttribute('aria-expanded', 'true');
    servicesMenu?.classList.remove('hidden');
    servicesButton?.querySelector('svg')?.classList.add('rotate-180');
  });

  servicesDropdown?.addEventListener('mouseleave', () => {
    dropdownTimeout = setTimeout(() => {
      servicesButton?.setAttribute('aria-expanded', 'false');
      servicesMenu?.classList.add('hidden');
      servicesButton?.querySelector('svg')?.classList.remove('rotate-180');
    }, 200);
  });

  // Click toggle for desktop dropdown (accessibility)
  servicesButton?.addEventListener('click', (e) => {
    e.preventDefault();
    const isExpanded = servicesButton.getAttribute('aria-expanded') === 'true';
    servicesButton.setAttribute('aria-expanded', String(!isExpanded));
    servicesMenu?.classList.toggle('hidden');
    servicesButton?.querySelector('svg')?.classList.toggle('rotate-180');
  });
</script>
