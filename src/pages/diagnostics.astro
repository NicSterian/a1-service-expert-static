---
import BaseLayout from '../layouts/BaseLayout.astro';

const capabilities = [
  'OEM-level fault code reading with manufacturer-specific tools',
  'Live data monitoring and graphical analysis',
  'ECU coding, programming, and software updates',
  'ADAS calibration and driver assistance system resets',
  'Hybrid and electric vehicle diagnostics',
  'Network and communication fault diagnosis',
  'Oscilloscope testing for electrical faults',
  'Smoke machine leak detection',
];

const commonIssues = [
  {
    title: 'Engine Management Light',
    description: 'Warning light diagnostics to identify the root cause of engine faults, emissions issues, or sensor failures.',
  },
  {
    title: 'ABS & Traction Control',
    description: 'Brake system diagnostics including ABS sensors, modules, and hydraulic component testing.',
  },
  {
    title: 'Airbag & SRS Systems',
    description: 'Safety system diagnostics to identify sensor faults, module issues, or wiring problems.',
  },
  {
    title: 'Transmission Issues',
    description: 'Automatic gearbox diagnostics including shift patterns, solenoid function, and adaptation resets.',
  },
  {
    title: 'Electrical Faults',
    description: 'Complex electrical diagnosis using wiring diagrams, circuit testing, and module communication checks.',
  },
  {
    title: 'Performance Issues',
    description: 'Power loss, rough running, or poor fuel economy investigated through live data and component testing.',
  },
];
---

<BaseLayout
  title="Car Diagnostics Kettering | Engine Diagnostics & Fault Finding | A1 Service Expert"
  description="Professional car diagnostics in Kettering. Dealer-level diagnostic equipment for all makes. Engine management, ABS, airbag, transmission diagnostics. Call 07394 433889."
>
  <div class="space-y-16">
    <!-- Hero Section -->
    <section
      class="relative overflow-hidden rounded-3xl text-white shadow-xl"
      style="background-image: url(/images/diagnostics-hero.svg); background-size: cover; background-position: center;"
    >
      <div class="absolute inset-0 bg-slate-950/80"></div>
      <div class="relative space-y-6 p-8 sm:p-14">
        <p class="text-sm font-semibold uppercase tracking-[0.4em] text-brand-orange">Diagnostics</p>
        <h1 class="text-4xl font-semibold sm:text-5xl">
          Dealer-Level Diagnostics in Kettering
        </h1>
        <p class="max-w-3xl text-base text-slate-200">
          Fast, accurate fault finding using manufacturer-level diagnostic equipment. From warning lights to complex electrical faults, our experienced technicians identify the root cause quickly so you can get back on the road with confidence.
        </p>
        <div class="flex flex-col gap-3 sm:flex-row">
          <a href="tel:07394433889" class="btn-primary">
            <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
            </svg>
            Book Diagnostics
          </a>
          <a href="/contact" class="btn-outline-white">
            Get Expert Advice
          </a>
        </div>
      </div>
    </section>

    <!-- Diagnostic Capabilities -->
    <section class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm sm:p-12">
      <div class="mx-auto max-w-4xl">
        <h2 class="text-3xl font-semibold text-brand-black">Our Diagnostic Capabilities</h2>
        <p class="mt-3 text-base text-slate-600">
          Professional equipment and expertise for comprehensive fault finding
        </p>
        <ul class="mt-8 grid gap-4 sm:grid-cols-2">
          {capabilities.map((capability) => (
            <li class="flex items-start gap-3 rounded-lg border border-slate-200 bg-slate-50 p-4">
              <span class="mt-1 inline-flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-brand-orange/10 text-brand-orange">
                <svg viewBox="0 0 20 20" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 10l3 3 5-6" />
                </svg>
              </span>
              <span class="text-sm font-medium text-slate-700">{capability}</span>
            </li>
          ))}
        </ul>
      </div>
    </section>

    <!-- Common Issues -->
    <section>
      <div class="mb-8 text-center">
        <h2 class="text-3xl font-semibold text-brand-black">Common Issues We Diagnose</h2>
        <p class="mt-3 text-base text-slate-600">
          From warning lights to complex electrical problems
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {commonIssues.map((issue) => (
          <article class="group rounded-3xl border border-slate-200 bg-white p-6 shadow-sm transition-all duration-200 hover:-translate-y-2 hover:border-brand-orange hover:shadow-xl">
            <h3 class="text-xl font-semibold text-brand-black transition-colors group-hover:text-brand-orange">
              {issue.title}
            </h3>
            <p class="mt-3 text-sm leading-relaxed text-slate-600">{issue.description}</p>
          </article>
        ))}
      </div>
    </section>

    <!-- How It Works -->
    <section class="rounded-3xl bg-slate-900 p-8 text-white shadow-xl sm:p-12">
      <div class="mx-auto max-w-4xl">
        <h2 class="text-3xl font-semibold">Our Diagnostic Process</h2>
        <p class="mt-3 text-base text-slate-200">
          Clear, methodical fault finding that gets to the root cause
        </p>
        <div class="mt-10 grid gap-6 md:grid-cols-2">
          <div class="rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur">
            <div class="flex items-center gap-3">
              <span class="flex h-10 w-10 items-center justify-center rounded-full bg-brand-orange text-lg font-bold text-white">1</span>
              <h3 class="text-lg font-semibold">Initial Assessment</h3>
            </div>
            <p class="mt-3 text-sm text-slate-200">
              We discuss your symptoms and vehicle history to understand the problem and guide our diagnostic approach.
            </p>
          </div>

          <div class="rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur">
            <div class="flex items-center gap-3">
              <span class="flex h-10 w-10 items-center justify-center rounded-full bg-brand-orange text-lg font-bold text-white">2</span>
              <h3 class="text-lg font-semibold">System Scan</h3>
            </div>
            <p class="mt-3 text-sm text-slate-200">
              Comprehensive diagnostic scan across all vehicle systems to identify fault codes and live data anomalies.
            </p>
          </div>

          <div class="rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur">
            <div class="flex items-center gap-3">
              <span class="flex h-10 w-10 items-center justify-center rounded-full bg-brand-orange text-lg font-bold text-white">3</span>
              <h3 class="text-lg font-semibold">Component Testing</h3>
            </div>
            <p class="mt-3 text-sm text-slate-200">
              Physical inspection and testing of suspected components using manufacturer data and technical documentation.
            </p>
          </div>

          <div class="rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur">
            <div class="flex items-center gap-3">
              <span class="flex h-10 w-10 items-center justify-center rounded-full bg-brand-orange text-lg font-bold text-white">4</span>
              <h3 class="text-lg font-semibold">Clear Report</h3>
            </div>
            <p class="mt-3 text-sm text-slate-200">
              Detailed explanation of the fault, required repairs, and transparent quote before any work begins.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="grid gap-8 lg:grid-cols-2">
      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-2xl font-semibold text-brand-black">Manufacturer-Level Tools</h2>
        <p class="mt-4 text-sm leading-relaxed text-slate-700">
          We invest in professional diagnostic equipment that gives us the same capabilities as main dealers. This means we can read manufacturer-specific fault codes, perform coding and adaptations, and access live data that generic code readers simply can't see.
        </p>
        <p class="mt-4 text-sm leading-relaxed text-slate-700">
          Whether you drive a premium European vehicle or a practical family car, we have the tools and expertise to diagnose issues accurately the first time.
        </p>
      </div>

      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-2xl font-semibold text-brand-black">Experienced Technicians</h2>
        <p class="mt-4 text-sm leading-relaxed text-slate-700">
          Diagnostic equipment is only as good as the technician using it. Our team combines years of hands-on experience with continuous training on modern diagnostic systems.
        </p>
        <p class="mt-4 text-sm leading-relaxed text-slate-700">
          We don't just read fault codes â€“ we use our knowledge of how systems work to identify the root cause and recommend the right repair, not unnecessary parts replacement.
        </p>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="rounded-3xl bg-gradient-to-br from-brand-orange to-orange-500 p-8 text-white shadow-xl sm:p-12">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-3xl font-semibold">Get Expert Diagnostics in Kettering</h2>
        <p class="mt-4 text-lg leading-relaxed text-white/90">
          Don't waste money on guesswork. Our professional diagnostics identify the exact problem so you only pay for repairs you actually need.
        </p>
        <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:justify-center">
          <a href="tel:07394433889" class="inline-flex items-center justify-center gap-2 rounded-full bg-white px-6 py-3 text-sm font-semibold text-brand-orange transition hover:-translate-y-0.5 hover:shadow-lg">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
            </svg>
            Call 07394 433889
          </a>
          <a href="https://wa.me/447394433889" target="_blank" rel="noreferrer" class="inline-flex items-center justify-center gap-2 rounded-full border-2 border-white px-6 py-3 text-sm font-semibold text-white transition hover:-translate-y-0.5 hover:bg-white hover:text-brand-orange">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor">
              <path d="M20.52 3.48A11.94 11.94 0 0 0 12.06 0C5.47 0 .1 5.37.1 12c0 2.12.56 4.14 1.62 5.94L0 24l6.2-1.6A11.86 11.86 0 0 0 12.06 24c6.58 0 11.94-5.37 11.94-12 0-3.2-1.25-6.2-3.48-8.52Zm-8.46 18.5c-1.86 0-3.63-.5-5.2-1.47l-.37-.22-3.68.95.98-3.58-.24-.37A9.65 9.65 0 0 1 2.3 12c0-5.38 4.38-9.76 9.76-9.76 2.6 0 5.06 1 6.9 2.83a9.66 9.66 0 0 1 2.86 6.93c0 5.38-4.38 9.76-9.76 9.76Zm5.63-7.3c-.3-.15-1.78-.88-2.06-.98-.28-.1-.49-.15-.7.15-.2.3-.8.98-.98 1.18-.2.2-.36.23-.66.08-.3-.15-1.25-.46-2.38-1.46-.88-.78-1.48-1.74-1.66-2.04-.18-.3 0-.47.14-.62.14-.14.3-.36.46-.54.15-.18.2-.3.3-.5.1-.2.05-.38-.03-.54-.08-.15-.7-1.68-.96-2.3-.25-.6-.5-.5-.7-.51h-.6c-.2 0-.54.07-.82.38-.28.3-1.08 1.06-1.08 2.58 0 1.5 1.1 2.94 1.26 3.14.15.2 2.12 3.24 5.14 4.54.72.3 1.28.48 1.72.62.72.23 1.38.2 1.9.12.58-.08 1.78-.72 2.03-1.4.26-.7.26-1.3.2-1.4-.08-.12-.28-.2-.58-.35Z"/>
            </svg>
            WhatsApp Us
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
