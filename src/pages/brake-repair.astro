---
import BaseLayout from '../layouts/BaseLayout.astro';

const services = [
  {
    title: 'Brake Pads & Discs',
    description: 'Professional replacement of brake pads and discs with quality parts and proper bedding-in procedures.',
  },
  {
    title: 'Brake Fluid Service',
    description: 'Complete fluid replacement to maintain hydraulic system performance and prevent internal corrosion.',
  },
  {
    title: 'Caliper Servicing',
    description: 'Strip, clean, and rebuild brake calipers to restore smooth operation and prevent sticking.',
  },
  {
    title: 'Handbrake Adjustment',
    description: 'Cable adjustment and mechanism servicing for reliable parking brake operation.',
  },
  {
    title: 'ABS Diagnostics',
    description: 'Electronic brake system fault finding including sensor testing and module diagnostics.',
  },
  {
    title: 'Brake Line Repair',
    description: 'Steel and flexible brake pipe replacement to maintain system integrity and safety.',
  },
];

const warningSigns = [
  {
    sign: 'Squealing or grinding noises',
    cause: 'Worn brake pads requiring immediate replacement to prevent disc damage',
  },
  {
    sign: 'Soft or spongy brake pedal',
    cause: 'Air in hydraulic system or worn master cylinder requiring bleeding or component replacement',
  },
  {
    sign: 'Vibration when braking',
    cause: 'Warped discs from overheating or uneven pad wear',
  },
  {
    sign: 'Pulling to one side',
    cause: 'Seized caliper, contaminated pads, or hydraulic imbalance',
  },
  {
    sign: 'Dashboard warning light',
    cause: 'Low fluid level, worn pads, or ABS sensor fault requiring diagnostics',
  },
  {
    sign: 'Increased stopping distance',
    cause: 'Worn pads, glazed discs, or contaminated friction surfaces',
  },
];
---

<BaseLayout
  title="Brake Repair Kettering | Brake Pads, Discs & Servicing | A1 Service Expert"
  description="Professional brake repairs in Kettering. Brake pads, discs, calipers, ABS diagnostics. Safety-critical work with quality parts. Call 07394 433889 for expert service."
>
  <div class="space-y-16">
    <!-- Hero Section -->
    <section class="rounded-3xl bg-gradient-to-br from-slate-900 to-slate-800 p-8 text-white shadow-xl sm:p-14">
      <p class="text-sm font-semibold uppercase tracking-[0.4em] text-brand-orange">Brake Systems</p>
      <h1 class="mt-3 text-4xl font-semibold sm:text-5xl">
        Professional Brake Repairs in Kettering
      </h1>
      <p class="mt-6 max-w-3xl text-base text-slate-200">
        Your brakes are your vehicle's most important safety system. Our experienced technicians provide comprehensive brake services from routine pad replacement to complex hydraulic repairs, using quality parts and proper procedures every time.
      </p>
      <div class="mt-8 flex flex-col gap-3 sm:flex-row">
        <a href="tel:07394433889" class="btn-primary">
          <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
          </svg>
          Call for Brake Check
        </a>
        <a href="/contact" class="btn-outline-white">
          Get a Quote
        </a>
      </div>
    </section>

    <!-- Services -->
    <section>
      <div class="mb-8 text-center">
        <h2 class="text-3xl font-semibold text-brand-black">Brake Services We Offer</h2>
        <p class="mt-3 text-base text-slate-600">
          Complete brake system care for confident, safe stopping
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {services.map((service) => (
          <article class="group rounded-3xl border border-slate-200 bg-white p-6 shadow-sm transition-all duration-200 hover:-translate-y-2 hover:border-brand-orange hover:shadow-xl">
            <h3 class="text-xl font-semibold text-brand-black transition-colors group-hover:text-brand-orange">
              {service.title}
            </h3>
            <p class="mt-3 text-sm leading-relaxed text-slate-600">{service.description}</p>
          </article>
        ))}
      </div>
    </section>

    <!-- Warning Signs -->
    <section class="rounded-3xl bg-slate-900 p-8 text-white shadow-xl sm:p-12">
      <div class="mx-auto max-w-4xl">
        <h2 class="text-3xl font-semibold">Warning Signs Your Brakes Need Attention</h2>
        <p class="mt-3 text-base text-slate-200">
          Don't ignore these symptoms â€“ they indicate safety-critical issues
        </p>
        <div class="mt-10 space-y-4">
          {warningSigns.map((item) => (
            <div class="rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur">
              <div class="flex items-start gap-4">
                <span class="mt-1 flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-brand-orange text-white">
                  <svg viewBox="0 0 20 20" class="h-5 w-5" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                  </svg>
                </span>
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-white">{item.sign}</h3>
                  <p class="mt-2 text-sm text-slate-200">{item.cause}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Quality & Safety -->
    <section class="grid gap-8 lg:grid-cols-2">
      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-2xl font-semibold text-brand-black">Quality Parts, Proper Procedures</h2>
        <p class="mt-4 text-sm leading-relaxed text-slate-700">
          We use quality brake components from trusted manufacturers, not cheap pattern parts that compromise safety and longevity. Every brake job includes proper cleaning, lubrication, and bedding-in procedures to ensure optimal performance.
        </p>
        <ul class="mt-6 space-y-2 text-sm text-slate-700">
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>OE-quality brake pads and discs</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Copper-free brake fluid (DOT 4 or DOT 5.1)</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Anti-seize compound on all sliding surfaces</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Proper torque settings on all fixings</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Road test and bed-in procedure</span>
          </li>
        </ul>
      </div>

      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-2xl font-semibold text-brand-black">How Often Should Brakes Be Checked?</h2>
        <p class="mt-4 text-sm leading-relaxed text-slate-700">
          We recommend having your brakes inspected at every service or at least annually. Brake pad life varies significantly based on driving style, vehicle type, and road conditions.
        </p>
        <div class="mt-6 space-y-4">
          <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
            <h3 class="text-sm font-semibold text-brand-black">Average Pad Life</h3>
            <p class="mt-2 text-xs text-slate-600">
              Front pads: 25,000-40,000 miles<br/>
              Rear pads: 40,000-70,000 miles
            </p>
          </div>
          <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
            <h3 class="text-sm font-semibold text-brand-black">Disc Replacement</h3>
            <p class="mt-2 text-xs text-slate-600">
              Typically every 2-3 pad changes, depending on wear patterns and minimum thickness specifications.
            </p>
          </div>
          <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
            <h3 class="text-sm font-semibold text-brand-black">Fluid Change</h3>
            <p class="mt-2 text-xs text-slate-600">
              Every 2 years regardless of mileage to prevent moisture contamination and maintain boiling point.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="rounded-3xl bg-gradient-to-br from-brand-orange to-orange-500 p-8 text-white shadow-xl sm:p-12">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-3xl font-semibold">Expert Brake Repairs in Kettering</h2>
        <p class="mt-4 text-lg leading-relaxed text-white/90">
          Don't compromise on safety. Contact us today for professional brake inspection, service, or repairs with quality parts and experienced technicians.
        </p>
        <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:justify-center">
          <a href="tel:07394433889" class="inline-flex items-center justify-center gap-2 rounded-full bg-white px-6 py-3 text-sm font-semibold text-brand-orange transition hover:-translate-y-0.5 hover:shadow-lg">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
            </svg>
            Call 07394 433889
          </a>
          <a href="https://wa.me/447394433889" target="_blank" rel="noreferrer" class="inline-flex items-center justify-center gap-2 rounded-full border-2 border-white px-6 py-3 text-sm font-semibold text-white transition hover:-translate-y-0.5 hover:bg-white hover:text-brand-orange">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor">
              <path d="M20.52 3.48A11.94 11.94 0 0 0 12.06 0C5.47 0 .1 5.37.1 12c0 2.12.56 4.14 1.62 5.94L0 24l6.2-1.6A11.86 11.86 0 0 0 12.06 24c6.58 0 11.94-5.37 11.94-12 0-3.2-1.25-6.2-3.48-8.52Zm-8.46 18.5c-1.86 0-3.63-.5-5.2-1.47l-.37-.22-3.68.95.98-3.58-.24-.37A9.65 9.65 0 0 1 2.3 12c0-5.38 4.38-9.76 9.76-9.76 2.6 0 5.06 1 6.9 2.83a9.66 9.66 0 0 1 2.86 6.93c0 5.38-4.38 9.76-9.76 9.76Zm5.63-7.3c-.3-.15-1.78-.88-2.06-.98-.28-.1-.49-.15-.7.15-.2.3-.8.98-.98 1.18-.2.2-.36.23-.66.08-.3-.15-1.25-.46-2.38-1.46-.88-.78-1.48-1.74-1.66-2.04-.18-.3 0-.47.14-.62.14-.14.3-.36.46-.54.15-.18.2-.3.3-.5.1-.2.05-.38-.03-.54-.08-.15-.7-1.68-.96-2.3-.25-.6-.5-.5-.7-.51h-.6c-.2 0-.54.07-.82.38-.28.3-1.08 1.06-1.08 2.58 0 1.5 1.1 2.94 1.26 3.14.15.2 2.12 3.24 5.14 4.54.72.3 1.28.48 1.72.62.72.23 1.38.2 1.9.12.58-.08 1.78-.72 2.03-1.4.26-.7.26-1.3.2-1.4-.08-.12-.28-.2-.58-.35Z"/>
            </svg>
            WhatsApp Us
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
