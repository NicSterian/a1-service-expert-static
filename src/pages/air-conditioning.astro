---
import BaseLayout from '../layouts/BaseLayout.astro';

const services = [
  {
    title: 'Re-Gas & Performance Check',
    description: 'Restore cooling performance with professional refrigerant top-up and system testing.',
    includes: [
      'System pressure testing',
      'Refrigerant recovery (R134a or R1234yf)',
      'Leak detection check',
      'Fresh refrigerant fill to manufacturer spec',
      'Performance test and temperature check',
      'UV dye injection for future leak detection',
    ],
  },
  {
    title: 'Deep Clean & Sanitize',
    description: 'Eliminate odours and bacteria for a fresh, healthy cabin environment.',
    includes: [
      'Cabin filter replacement',
      'Evaporator anti-bacterial treatment',
      'Ozone odour elimination',
      'Air duct sanitization',
      'System deodorising',
    ],
  },
  {
    title: 'Component Repair',
    description: 'Expert diagnosis and repair of air conditioning system components.',
    includes: [
      'Full system diagnostic scan',
      'Compressor testing and replacement',
      'Condenser and evaporator inspection',
      'Pressure switch and sensor replacement',
      'Pipe and hose leak repair',
      'Climate control module diagnostics',
    ],
  },
];

const highlights = [
  'F-Gas certified technicians',
  'R134a and R1234yf refrigerant handling',
  'UV and nitrogen leak detection',
  'Modern refrigerant recovery equipment',
  'Climate control diagnostics',
  'Manufacturer-compliant procedures',
];
---

<BaseLayout
  title="Car Air Conditioning Services Kettering | AC Regas & Repair | A1 Service Expert"
  description="Professional car air conditioning services in Kettering. AC regas, leak detection, repairs. F-Gas certified technicians, R134a & R1234yf refrigerant. Call 07394 433889."
>
  <div class="space-y-16">
    <!-- Hero Section -->
    <section
      class="relative overflow-hidden rounded-3xl text-white shadow-xl"
      style="background-image: url(/images/aircon-hero.svg); background-size: cover; background-position: center;"
    >
      <div class="absolute inset-0 bg-slate-950/80"></div>
      <div class="relative space-y-6 p-8 sm:p-14">
        <p class="text-sm font-semibold uppercase tracking-[0.4em] text-brand-orange">Air Conditioning</p>
        <h1 class="text-4xl font-semibold sm:text-5xl">Car Air Conditioning Services in Kettering</h1>
        <p class="max-w-3xl text-base text-slate-200">
          Keep your cabin cool and comfortable all year round. Our F-Gas certified technicians provide professional air conditioning services using accredited equipment and genuine refrigerants for all vehicle makes and models.
        </p>
        <div class="flex flex-col gap-3 sm:flex-row">
          <a href="tel:07394433889" class="btn-primary">
            <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
            </svg>
            Call for AC Service
          </a>
          <a href="/contact" class="btn-outline-white">
            Get a Quote
          </a>
        </div>
      </div>
    </section>

    <!-- Services -->
    <section>
      <div class="mb-8 text-center">
        <h2 class="text-3xl font-semibold text-brand-black">Air Conditioning Services</h2>
        <p class="mt-3 text-base text-slate-600">
          From routine regas to complex component repairs
        </p>
      </div>

      <div class="grid gap-8 lg:grid-cols-3">
        {services.map((service) => (
          <article class="group flex flex-col rounded-3xl border border-slate-200 bg-white p-8 shadow-sm transition-all duration-200 hover:-translate-y-2 hover:border-brand-orange hover:shadow-xl">
            <h3 class="text-2xl font-semibold text-brand-black transition-colors group-hover:text-brand-orange">
              {service.title}
            </h3>
            <p class="mt-3 text-sm text-slate-600">{service.description}</p>
            <div class="mt-6 flex-1">
              <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Service Includes</p>
              <ul class="mt-3 space-y-2">
                {service.includes.map((item) => (
                  <li class="flex items-start gap-2 text-sm text-slate-700">
                    <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="grid gap-8 lg:grid-cols-2">
      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-2xl font-semibold text-brand-black">Professional Equipment & Certification</h2>
        <p class="mt-4 text-sm leading-relaxed text-slate-700">
          All our air conditioning work is carried out by F-Gas certified technicians using EPA-compliant recovery and recharge equipment. We handle both older R134a and newer R1234yf refrigerants safely and legally.
        </p>
        <ul class="mt-6 space-y-3">
          {highlights.map((highlight) => (
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-brand-orange/10 text-brand-orange">
                <svg viewBox="0 0 20 20" class="h-3.5 w-3.5" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 10l3 3 5-6" />
                </svg>
              </span>
              <span class="text-sm text-slate-700">{highlight}</span>
            </li>
          ))}
        </ul>
      </div>

      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-2xl font-semibold text-brand-black">Common AC Problems We Fix</h2>
        <ul class="mt-6 space-y-3 text-sm text-slate-700">
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span><strong>Weak or warm airflow</strong> - Often caused by low refrigerant or compressor issues</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span><strong>Unpleasant odours</strong> - Bacterial build-up in evaporator requiring sanitization</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span><strong>Strange noises</strong> - May indicate compressor bearing wear or pulley issues</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span><strong>Refrigerant leaks</strong> - Detected using UV dye and nitrogen pressure testing</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span><strong>System not engaging</strong> - Electrical faults, pressure switches, or climate control modules</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span><strong>Intermittent cooling</strong> - Can be caused by expansion valve or sensor faults</span>
          </li>
        </ul>
      </div>
    </section>

    <!-- How Often -->
    <section class="rounded-3xl bg-slate-900 p-8 text-white shadow-xl sm:p-12">
      <div class="mx-auto max-w-4xl">
        <h2 class="text-3xl font-semibold">How Often Should You Service Your Air Conditioning?</h2>
        <p class="mt-4 text-base leading-relaxed text-slate-200">
          Vehicle air conditioning systems naturally lose refrigerant over time, even without leaks. We recommend having your AC serviced every 2 years to maintain optimal performance and prevent compressor damage from running low on refrigerant.
        </p>
        <div class="mt-8 grid gap-6 sm:grid-cols-2">
          <div class="rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur">
            <h3 class="text-lg font-semibold text-white">Regular Use (Annual Check)</h3>
            <p class="mt-2 text-sm text-slate-200">
              If you use your AC year-round, an annual check ensures the system stays at peak efficiency and catches small issues before they become expensive repairs.
            </p>
          </div>
          <div class="rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur">
            <h3 class="text-lg font-semibold text-white">Seasonal Use (Every 2 Years)</h3>
            <p class="mt-2 text-sm text-slate-200">
              For vehicles where AC is mainly used in summer, a service every 2 years is typically sufficient to maintain performance and system health.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="rounded-3xl bg-gradient-to-br from-brand-orange to-orange-500 p-8 text-white shadow-xl sm:p-12">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-3xl font-semibold">Get Your Air Conditioning Serviced in Kettering</h2>
        <p class="mt-4 text-lg leading-relaxed text-white/90">
          Don't suffer through summer heat or winter condensation. Contact us today to book your air conditioning service with our F-Gas certified technicians.
        </p>
        <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:justify-center">
          <a href="tel:07394433889" class="inline-flex items-center justify-center gap-2 rounded-full bg-white px-6 py-3 text-sm font-semibold text-brand-orange transition hover:-translate-y-0.5 hover:shadow-lg">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
            </svg>
            Call 07394 433889
          </a>
          <a href="https://wa.me/447394433889" target="_blank" rel="noreferrer" class="inline-flex items-center justify-center gap-2 rounded-full border-2 border-white px-6 py-3 text-sm font-semibold text-white transition hover:-translate-y-0.5 hover:bg-white hover:text-brand-orange">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor">
              <path d="M20.52 3.48A11.94 11.94 0 0 0 12.06 0C5.47 0 .1 5.37.1 12c0 2.12.56 4.14 1.62 5.94L0 24l6.2-1.6A11.86 11.86 0 0 0 12.06 24c6.58 0 11.94-5.37 11.94-12 0-3.2-1.25-6.2-3.48-8.52Zm-8.46 18.5c-1.86 0-3.63-.5-5.2-1.47l-.37-.22-3.68.95.98-3.58-.24-.37A9.65 9.65 0 0 1 2.3 12c0-5.38 4.38-9.76 9.76-9.76 2.6 0 5.06 1 6.9 2.83a9.66 9.66 0 0 1 2.86 6.93c0 5.38-4.38 9.76-9.76 9.76Zm5.63-7.3c-.3-.15-1.78-.88-2.06-.98-.28-.1-.49-.15-.7.15-.2.3-.8.98-.98 1.18-.2.2-.36.23-.66.08-.3-.15-1.25-.46-2.38-1.46-.88-.78-1.48-1.74-1.66-2.04-.18-.3 0-.47.14-.62.14-.14.3-.36.46-.54.15-.18.2-.3.3-.5.1-.2.05-.38-.03-.54-.08-.15-.7-1.68-.96-2.3-.25-.6-.5-.5-.7-.51h-.6c-.2 0-.54.07-.82.38-.28.3-1.08 1.06-1.08 2.58 0 1.5 1.1 2.94 1.26 3.14.15.2 2.12 3.24 5.14 4.54.72.3 1.28.48 1.72.62.72.23 1.38.2 1.9.12.58-.08 1.78-.72 2.03-1.4.26-.7.26-1.3.2-1.4-.08-.12-.28-.2-.58-.35Z"/>
            </svg>
            WhatsApp Us
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
