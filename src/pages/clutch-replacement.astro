---
import BaseLayout from '../layouts/BaseLayout.astro';

const symptoms = [
  {
    title: 'Slipping Clutch',
    description: 'Engine revs increase without matching acceleration, especially noticeable under load or going uphill.',
    severity: 'High - requires urgent replacement',
  },
  {
    title: 'Heavy or Stiff Pedal',
    description: 'Excessive force required to depress the clutch, often indicating cable, hydraulic, or pressure plate issues.',
    severity: 'Medium - affects driving comfort and safety',
  },
  {
    title: 'Biting Point Changes',
    description: 'Engagement point moves higher or becomes inconsistent, suggesting wear or hydraulic problems.',
    severity: 'Medium - monitor and plan replacement',
  },
  {
    title: 'Juddering or Vibration',
    description: 'Shaking felt through the pedal or vehicle when pulling away, indicating contamination or flywheel wear.',
    severity: 'High - can worsen rapidly',
  },
  {
    title: 'Burning Smell',
    description: 'Distinct burning odour after gear changes or hill starts, showing friction material overheating.',
    severity: 'High - excessive slippage occurring',
  },
  {
    title: 'Difficulty Changing Gears',
    description: 'Gears hard to select or grinding noise when shifting, may be clutch not fully disengaging.',
    severity: 'Medium - could damage gearbox',
  },
];

const serviceIncludes = [
  'Complete clutch kit (friction plate, pressure plate, release bearing)',
  'Flywheel inspection and skimming or replacement if required',
  'Hydraulic system check and fluid replacement',
  'Gearbox input shaft inspection and cleaning',
  'Pilot bearing replacement (where applicable)',
  'Fork and pivot mechanism inspection',
  'Road test and clutch pedal adjustment',
];
