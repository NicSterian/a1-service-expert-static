---
import BaseLayout from '../layouts/BaseLayout.astro';

const servicePackages = [
  {
    title: 'Oil & Filter Service',
    description: 'Essential lubrication refresh to keep your engine protected between major services.',
    includes: [
      'Engine oil change (up to 5 litres)',
      'Oil filter replacement',
      'Fluid level checks and top-ups',
      'Visual safety inspection',
      'Service indicator reset',
    ],
  },
  {
    title: 'Interim Service',
    description: 'Comprehensive mid-year service combining essential maintenance with safety checks.',
    includes: [
      'All Oil & Filter Service items',
      'Air filter replacement',
      'Cabin filter replacement',
      'Brake system inspection',
      'Battery health check',
      'Full underbody inspection',
      'Tyre condition and pressure check',
    ],
  },
  {
    title: 'Full Service',
    description: 'Complete annual service following manufacturer schedules for optimal performance.',
    includes: [
      'All Interim Service items',
      'Spark plug replacement (where applicable)',
      'Fuel filter inspection/replacement',
      'Full brake and disc inspection',
      'Suspension component check',
      'Exhaust system inspection',
      'Comprehensive diagnostic scan',
    ],
  },
];

const benefits = [
  'Manufacturer-compliant service procedures',
  'OE-quality parts with warranty protection',
  'Digital service records and reports',
  'Transparent pricing with no hidden fees',
  'Experienced technicians, not service advisors',
  'Comfortable waiting area available',
];
---

<BaseLayout
  title="Car Servicing Kettering | Full & Interim Service | A1 Service Expert"
  description="Professional car servicing in Kettering. Full and interim services with manufacturer-compliant procedures. Experienced mechanics, quality parts, honest prices. Call 07394 433889."
>
  <div class="space-y-16">
    <!-- Hero Section -->
    <section class="rounded-3xl bg-gradient-to-br from-slate-900 to-slate-800 p-8 text-white shadow-xl sm:p-14">
      <p class="text-sm font-semibold uppercase tracking-[0.4em] text-brand-orange">Car Servicing</p>
      <h1 class="mt-3 text-4xl font-semibold sm:text-5xl">
        Professional Car Servicing in Kettering
      </h1>
      <p class="mt-6 max-w-3xl text-base text-slate-200">
        Keep your vehicle running smoothly with manufacturer-compliant servicing from A1 Service Expert. Our experienced technicians follow precise service schedules using quality parts and modern diagnostic equipment.
      </p>
      <div class="mt-8 flex flex-col gap-3 sm:flex-row">
        <a href="tel:07394433889" class="btn-primary">
          <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
          </svg>
          Call for Service Quote
        </a>
        <a href="/contact" class="btn-outline-white">
          Contact Us
        </a>
      </div>
    </section>

    <!-- Service Packages -->
    <section>
      <div class="mb-8 text-center">
        <h2 class="text-3xl font-semibold text-brand-black">Service Packages</h2>
        <p class="mt-3 text-base text-slate-600">
          Tailored to your vehicle's needs and manufacturer schedule
        </p>
      </div>

      <div class="grid gap-8 lg:grid-cols-3">
        {servicePackages.map((pkg) => (
          <article class="group flex flex-col rounded-3xl border border-slate-200 bg-white p-8 shadow-sm transition-all duration-200 hover:-translate-y-2 hover:border-brand-orange hover:shadow-xl">
            <h3 class="text-2xl font-semibold text-brand-black transition-colors group-hover:text-brand-orange">
              {pkg.title}
            </h3>
            <p class="mt-3 text-sm text-slate-600">{pkg.description}</p>
            <div class="mt-6 flex-1">
              <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Includes</p>
              <ul class="mt-3 space-y-2">
                {pkg.includes.map((item) => (
                  <li class="flex items-start gap-2 text-sm text-slate-700">
                    <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
            <a href="/contact" class="btn-secondary mt-6 justify-center">
              Get a Quote
            </a>
          </article>
        ))}
      </div>
    </section>

    <!-- Why Service With Us -->
    <section class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm sm:p-12">
      <div class="mx-auto max-w-4xl">
        <h2 class="text-3xl font-semibold text-brand-black">Why Service Your Car at A1 Service Expert?</h2>
        <p class="mt-3 text-base text-slate-600">
          We combine dealer-level expertise with independent garage pricing and personal service.
        </p>
        <ul class="mt-8 grid gap-4 sm:grid-cols-2">
          {benefits.map((benefit) => (
            <li class="flex items-start gap-3 rounded-lg border border-slate-200 bg-slate-50 p-4">
              <span class="mt-1 inline-flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-brand-orange/10 text-brand-orange">
                <svg viewBox="0 0 20 20" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 10l3 3 5-6" />
                </svg>
              </span>
              <span class="text-sm font-medium text-slate-700">{benefit}</span>
            </li>
          ))}
        </ul>
      </div>
    </section>

    <!-- Service Information -->
    <section class="grid gap-8 lg:grid-cols-2">
      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-2xl font-semibold text-brand-black">Warranty-Safe Servicing</h2>
        <p class="mt-4 text-sm leading-relaxed text-slate-700">
          All our services follow manufacturer specifications and use OE-quality parts, ensuring your vehicle warranty remains valid. We provide detailed service records and can stamp your service book where required.
        </p>
        <p class="mt-4 text-sm leading-relaxed text-slate-700">
          Whether your vehicle is under manufacturer warranty or you simply want to maintain its service history, our comprehensive approach ensures every aspect of your service schedule is met.
        </p>
      </div>

      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-2xl font-semibold text-brand-black">What We Check Every Time</h2>
        <ul class="mt-4 space-y-2 text-sm text-slate-700">
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Engine oil and filter condition</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>All fluid levels (coolant, brake, power steering, washer)</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Brake pads, discs, and hydraulic system</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Tyre tread depth, condition, and pressure</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Suspension components and steering</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Battery condition and charging system</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Lights, wipers, and safety systems</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1.5 inline-block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-brand-orange"></span>
            <span>Exhaust system and emissions</span>
          </li>
        </ul>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="rounded-3xl bg-gradient-to-br from-brand-orange to-orange-500 p-8 text-white shadow-xl sm:p-12">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-3xl font-semibold">Book Your Service in Kettering</h2>
        <p class="mt-4 text-lg leading-relaxed text-white/90">
          Keep your vehicle in top condition with professional servicing from experienced technicians. Contact us today for a quote or to discuss your service requirements.
        </p>
        <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:justify-center">
          <a href="tel:07394433889" class="inline-flex items-center justify-center gap-2 rounded-full bg-white px-6 py-3 text-sm font-semibold text-brand-orange transition hover:-translate-y-0.5 hover:shadow-lg">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 0 1 2-2h2.28a2 2 0 0 1 1.94 1.515l.74 2.964a2 2 0 0 1-.97 2.26l-1.21.726a11 11 0 0 0 5.1 5.1l.73-1.21a2 2 0 0 1 2.26-.97l2.96.74A2 2 0 0 1 21 18.72V21a2 2 0 0 1-2 2h-1c-8.284 0-15-6.716-15-15V5Z" />
            </svg>
            Call 07394 433889
          </a>
          <a href="https://wa.me/447394433889" target="_blank" rel="noreferrer" class="inline-flex items-center justify-center gap-2 rounded-full border-2 border-white px-6 py-3 text-sm font-semibold text-white transition hover:-translate-y-0.5 hover:bg-white hover:text-brand-orange">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor">
              <path d="M20.52 3.48A11.94 11.94 0 0 0 12.06 0C5.47 0 .1 5.37.1 12c0 2.12.56 4.14 1.62 5.94L0 24l6.2-1.6A11.86 11.86 0 0 0 12.06 24c6.58 0 11.94-5.37 11.94-12 0-3.2-1.25-6.2-3.48-8.52Zm-8.46 18.5c-1.86 0-3.63-.5-5.2-1.47l-.37-.22-3.68.95.98-3.58-.24-.37A9.65 9.65 0 0 1 2.3 12c0-5.38 4.38-9.76 9.76-9.76 2.6 0 5.06 1 6.9 2.83a9.66 9.66 0 0 1 2.86 6.93c0 5.38-4.38 9.76-9.76 9.76Zm5.63-7.3c-.3-.15-1.78-.88-2.06-.98-.28-.1-.49-.15-.7.15-.2.3-.8.98-.98 1.18-.2.2-.36.23-.66.08-.3-.15-1.25-.46-2.38-1.46-.88-.78-1.48-1.74-1.66-2.04-.18-.3 0-.47.14-.62.14-.14.3-.36.46-.54.15-.18.2-.3.3-.5.1-.2.05-.38-.03-.54-.08-.15-.7-1.68-.96-2.3-.25-.6-.5-.5-.7-.51h-.6c-.2 0-.54.07-.82.38-.28.3-1.08 1.06-1.08 2.58 0 1.5 1.1 2.94 1.26 3.14.15.2 2.12 3.24 5.14 4.54.72.3 1.28.48 1.72.62.72.23 1.38.2 1.9.12.58-.08 1.78-.72 2.03-1.4.26-.7.26-1.3.2-1.4-.08-.12-.28-.2-.58-.35Z"/>
            </svg>
            WhatsApp Us
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
