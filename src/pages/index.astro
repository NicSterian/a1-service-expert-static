---
import BaseLayout from '../layouts/BaseLayout.astro';

const heroHighlights = [
  {
    title: 'Same-Day Diagnostics',
    description: 'Dealer-level diagnostic equipment for fast, accurate fault finding on all makes and models.',
  },
  {
    title: 'Transparent Service',
    description: 'No hidden fees or surprises. Honest advice and clear communication at every step.',
  },
  {
    title: 'Expert Technicians',
    description: 'Decades of experience with manufacturer-compliant procedures and quality parts.',
  },
];

const showcaseServices = [
  {
    id: 'air-conditioning',
    title: 'Air Conditioning',
    blurb: 'Regas, leak detection, and cabin treatments for year-round comfort.',
    href: '/air-conditioning',
  },
  {
    id: 'diagnostics',
    title: 'Engine Diagnostics',
    blurb: 'Advanced fault detection with dealer-level diagnostic tools.',
    href: '/diagnostics',
  },
  {
    id: 'brakes',
    title: 'Brake Systems',
    blurb: 'Pads, discs, hydraulics, and safety inspections for confident braking.',
    href: '/brake-repair',
  },
  {
    id: 'servicing',
    title: 'Car Servicing',
    blurb: 'Full and interim servicing with manufacturer-compliant standards.',
    href: '/car-servicing',
  },
];

const extendedServices = [
  'Power steering repairs and rack & pinion servicing',
  'Battery supply, fitting, and coding for all vehicle types',
  'Clutch replacement with hydraulic bleeding and adjustment',
  'Cambelt replacement to manufacturer schedules',
  'Engine component replacement and rebuild services',
  'Exhaust repairs, DPF servicing, and emissions testing',
  'Complete fluid maintenance including oil, coolant, and brake fluid',
  'Comprehensive repairs for cars and light commercial vehicles',
];

const whyChooseUs = [
  'Transparent pricing with no hidden fees',
  'Warranty-safe maintenance with OE-quality parts',
  'Comfortable waiting area with free WiFi and refreshments',
];
---

<BaseLayout
  title="A1 Service Expert | Car Servicing & Repairs Kettering | Independent Garage"
  description="Expert car servicing, diagnostics, and repairs in Kettering, Northamptonshire. Independent garage with dealer-level expertise. Call 07394 433889 for professional service."
>
  <div class="space-y-16">
    <!-- Hero Section -->
    <section
      class="relative overflow-hidden rounded-3xl text-white shadow-xl"
      style="background-image: url(/images/home-hero.svg); background-size: cover; background-position: center;"
